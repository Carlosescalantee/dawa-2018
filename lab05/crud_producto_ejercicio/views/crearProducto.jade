html
	head
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title CRUD
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
		
	body
		block content
			.main.container
				.row
					.col-md-6.col-md-offset-3
						h1.display-4.m-b-2 Crear Producto
						form(method='POST' action='/crearProducto')
							
							div.form-group
								label(for='nombre') Nombre del Producto:
								input.form-control(type='text' name='nombre')
							div.form-group
								label(for='descripcion') Descripcion del Producto:
								input.form-control(type='text' name='descripcion')
							div.form-group
								label(for='precio') Precio del Producto:
								input.form-control(type='text' name='precio')
							
							button.btn.btn-success(type='submit') Guardar Producto
